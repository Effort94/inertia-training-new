{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "max-len": "off",
        "vue/no-mutating-props": "off",
        "indent": ["error", 4]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["@", "./resources/js/components"]
                ],
                "extensions": [".js", ".jsx", ".vue"]
            }
        }
    },
    "globals": {
        "axios": false
    }
}
